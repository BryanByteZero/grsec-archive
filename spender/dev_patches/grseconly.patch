diff -urNp -U4 linux-2.6.24.7/grsecurity/grsec_exec.c linux-2.6.24.7-new/grsecurity/grsec_exec.c
--- linux-2.6.24.7/grsecurity/grsec_exec.c	1969-12-31 19:00:00.000000000 -0500
+++ linux-2.6.24.7-new/grsecurity/grsec_exec.c	2008-05-06 17:49:09.000000000 -0400
@@ -0,0 +1,88 @@
+#include <linux/kernel.h>
+#include <linux/sched.h>
